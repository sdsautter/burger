<div class="container">
  <div class="row">
    <div class="col-12 text-center">
        <h1>Burgers For Life!</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-6 offset-3">
      <img src="/assets/img/burger.png">
    </div>
  </div>
  <br>
  <div class="row">
    <div class="col-6">
      <div class="row">
        <div class="col-12">
          <h2>Eat These Burgers!</h2>
        </div>
        <div class="col-12">
          <ul>
            {{#each burgers}}
              {{#unless this.dataValues.devoured}}
                <li>
                  {{this.dataValues.name}}

                  <form action="/{{this.dataValues.id}}?_method=PUT" method="POST">
                    <input type="hidden" name="devoured" value="1">
                    <button type="submit">Eat Me</button>
                  </form>

                </li>
              {{/unless}}
            {{/each}}
          </ul>
        </div>
      </div>
    </div>
    <div class="col-6">
      <div class="row">
        <div class="col-12">
          <h2>These Burgers Were Devoured!</h2>
        </div>
        <div class="col-12">
          <ul>
            {{#each burgers}}
              {{#if this.dataValues.devoured}}
                <li>
                  {{this.dataValues.name}}

                </li>
              {{/if}}
            {{/each}}
          </ul>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-6 offset-3">  
      <h2>Add a burger</h2>
      <form class="create-update-form" action="/" method="POST">

        <div class="form-group">
          <label for="burger">Burger Name:</label>
          <input type="text" id="burger" name="name">
        </div>
        <button type="submit">Add burger</button>
      </form>
    </div>  
</div>