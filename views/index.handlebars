<div class="container">
  <div class="row">
    <div class="col-6 offset-3">
        <h1>burgers!</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-6">
      <div class="row">
        <div class="col-3 offset-3">
          <h2>burgers that are not devoured!</h2>
        </div>
        <div class="col-12">
          <ul>
            {{#each uneaten}}
              {{#unless this.devoured}}
                <li>
                  {{this.burger_name}}

                  <form action="/{{this.id}}?_method=PUT" method="POST">
                    <input type="hidden" name="devoured" value="true">
                    <button type="submit">Eat Me</button>
                  </form>

                </li>
              {{/unless}}
            {{/each}}
          </ul>
        </div>
      </div>
    </div>
    <div class="col-6">
      <div class="row">
        <div class="col-6 offset-3">
          <h2>burgers that are devoured!</h2>
        </div>
        <div class="col-12">
          <ul>
            {{#each eaten}}
              {{#if this.devoured}}
                <li>
                  {{this.burger_name}}

                </li>
              {{/if}}
            {{/each}}
          </ul>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-6 offset-3">  
      <h2>Add a burger</h2>
      <form class="create-update-form" action="/" method="POST">

        <div class="form-group">
          <label for="burger">Burger Name:</label>
          <input type="text" id="burger" name="name">
        </div>
        <button type="submit">Add burger</button>
      </form>
    </div>  
</div>